import React, { useState, useEffect } from "react";
import { ntuthuko } from "@/api/ntuthukoClient";
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { 
  Shield, 
  Heart, 
  Phone, 
  AlertTriangle,
  Users,
  Plus,
  Edit,
  Trash2,
  Save,
  X
} from "lucide-react";
import { toast } from "sonner";

const officialContacts = [
  { 
    name: "SAPS Emergency", 
    number: "10111", 
    icon: Shield, 
    color: "red",
    description: "Police emergency services - available 24/7"
  },
  { 
    name: "Ambulance", 
    number: "10177", 
    icon: Heart, 
    color: "blue",
    description: "Medical emergency services"
  },
  { 
    name: "Fire Department", 
    number: "10111", 
    icon: AlertTriangle, 
    color: "orange",
    description: "Fire and rescue services"
  },
  { 
    name: "GBV Command Centre", 
    number: "0800 428 428", 
    icon: Phone, 
    color: "purple",
    description: "Gender-Based Violence support - 24/7"
  },
  { 
    name: "Childline SA", 
    number: "0800 055 555", 
    icon: Users, 
    color: "green",
    description: "Child protection and counselling"
  },
  { 
    name: "Suicide Crisis Line", 
    number: "0800 567 567", 
    icon: Heart, 
    color: "pink",
    description: "24/7 mental health support"
  },
];

export default function EmergencyContacts() {
  const [user, setUser] = useState(null);
  const [personalContacts, setPersonalContacts] = useState([]);
  const [editingIndex, setEditingIndex] = useState(null);
  const [newContact, setNewContact] = useState({ name: "", phone: "", relationship: "" });
  const [saving, setSaving] = useState(false);

  useEffect(() => {
    loadUser();
  }, []);

  const loadUser = async () => {
    try {
      const currentUser = await base44.auth.me();
      setUser(currentUser);
      setPersonalContacts(currentUser.emergency_contacts || []);
    } catch (error) {
      console.error("Error loading user:", error);
    }
  };

  const handleSaveContacts = async () => {
    setSaving(true);
    try {
      await base44.auth.updateMe({ emergency_contacts: personalContacts });
      toast.success("Emergency contacts updated!");
      setEditingIndex(null);
      await loadUser();
    } catch (error) {
      console.error("Error saving contacts:", error);
      toast.error("Failed to update contacts");
    } finally {
      setSaving(false);
    }
  };

  const addContact = () => {
    if (!newContact.name || !newContact.phone) {
      toast.error("Please fill in name and phone number");
      return;
    }
    setPersonalContacts([...personalContacts, newContact]);
    setNewContact({ name: "", phone: "", relationship: "" });
  };

  const removeContact = (index) => {
    setPersonalContacts(personalContacts.filter((_, i) => i !== index));
  };

  const updateContact = (index, field, value) => {
    const updated = [...personalContacts];
    updated[index] = { ...updated[index], [field]: value };
    setPersonalContacts(updated);
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-gray-50 via-orange-50 to-red-50 p-4 md:p-8">
      <div className="max-w-6xl mx-auto">
        <div className="mb-8">
          <h1 className="text-3xl font-bold text-gray-900 mb-2">Emergency Contacts</h1>
          <p className="text-gray-600">Quick access to emergency services and your personal contacts</p>
        </div>

        {/* Official Emergency Numbers */}
        <div className="mb-8">
          <h2 className="text-2xl font-bold text-gray-900 mb-4">Official Emergency Services</h2>
          <div className="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {officialContacts.map((contact, index) => (
              <Card key={index} className="border-none shadow-lg hover:shadow-xl transition-all overflow-hidden">
                <div className={`h-2 bg-gradient-to-r from-${contact.color}-500 to-${contact.color}-600`} />
                <CardContent className="p-6">
                  <div className="flex items-start gap-4">
                    <div className={`p-3 rounded-xl bg-gradient-to-br from-${contact.color}-500 to-${contact.color}-600`}>
                      <contact.icon className="w-8 h-8 text-white" />
                    </div>
                    <div className="flex-1">
                      <h3 className="font-bold text-lg text-gray-900 mb-1">{contact.name}</h3>
                      <p className="text-sm text-gray-600 mb-3">{contact.description}</p>
                      <a
                        href={`tel:${contact.number}`}
                        className="inline-flex items-center gap-2 text-2xl font-bold text-red-600 hover:text-red-700"
                      >
                        <Phone className="w-5 h-5" />
                        {contact.number}
                      </a>
                    </div>
                  </div>
                </CardContent>
              </Card>
            ))}
             <CardHeader>
              <CardTitle>Add New Contact</CardTitle>
            </CardHeader>
            <CardContent>
              <div className="grid md:grid-cols-4 gap-4">
                <div className="md:col-span-1">
                  <Label>Name</Label>
                  <Input
                    placeholder="Contact name"
                    value={newContact.name}
                    onChange={(e) => setNewContact({ ...newContact, name: e.target.value })}
                  />
                </div>
                <div className="md:col-span-1">
                  <Label>Phone Number</Label>
                  <Input
                    placeholder="+27 XX XXX XXXX"
                    value={newContact.phone}
                    onChange={(e) => setNewContact({ ...newContact, phone: e.target.value })}
                  />
                </div>
                <div className="md:col-span-1">
                  <Label>Relationship</Label>
                  <Input
                    placeholder="e.g., Spouse, Parent"
                    value={newContact.relationship}
                    onChange={(e) => setNewContact({ ...newContact, relationship: e.target.value })}
                  />
                </div>
                <div className="flex items-end">
                  <Button
                    onClick={addContact}
                    className="w-full bg-gradient-to-r from-red-600 to-orange-500"
                  >
                    <Plus className="w-4 h-4 mr-2" />
                    Add Contact
                  </Button>
                </div>
              </div>
            </CardContent>
          </Card>

          {personalContacts.length === 0 ? (
            <Card className="border-none shadow-lg">
              <CardContent className="py-20 text-center">
                <Users className="w-16 h-16 text-gray-300 mx-auto mb-4" />
                <h3 className="text-xl font-semibold text-gray-900 mb-2">No Personal Contacts Yet</h3>
                <p className="text-gray-500">
                  Add trusted contacts who will be notified during emergencies
                </p>
              </CardContent>
            </Card>
          ) : (
            <div className="grid md:grid-cols-2 gap-4">
              {personalContacts.map((contact, index) => (
                <Card key={index} className="border-none shadow-lg">
                  <CardContent className="p-6">
                    {editingIndex === index ? (
                      <div className="space-y-3">
                        <Input
                          value={contact.name}
                          onChange={(e) => updateContact(index, "name", e.target.value)}
                          placeholder="Name"
                        />
                        <Input
                          value={contact.phone}
                          onChange={(e) => updateContact(index, "phone", e.target.value)}
                          placeholder="Phone"
                        />
                        <Input
                          value={contact.relationship}
                          onChange={(e) => updateContact(index, "relationship", e.target.value)}
                          placeholder="Relationship"
                        />
                        <div className="flex gap-2">
                          <Button
                            onClick={() => setEditingIndex(null)}
                            variant="outline"
                            size="sm"
                            className="flex-1"
                          >
                            <X className="w-4 h-4 mr-2" />
                            Cancel
                          </Button>
                          <Button
                            onClick={handleSaveContacts}
                            size="sm"
                            className="flex-1 bg-green-600"
                          >
                            <Save className="w-4 h-4 mr-2" />
                            Save
                          </Button>
                        </div>
                      </div>
                    ) : (
                      <div>
                        <div className="flex justify-between items-start mb-4">
                          <div className="flex items-start gap-3">
                            <div className="p-2 rounded-lg bg-gradient-to-br from-red-100 to-orange-100">
                              <Users className="w-6 h-6 text-red-600" />
                            </div>
                            <div>
                              <h3 className="font-bold text-lg text-gray-900">{contact.name}</h3>
                              <p className="text-sm text-gray-600">{contact.relationship}</p>
                            </div>
                          </div>
                          <div className="flex gap-2">
                            <Button
                              variant="ghost"
                              size="sm"
                              onClick={() => setEditingIndex(index)}
                            >
                              <Edit className="w-4 h-4" />
                            </Button>
                            <Button
                              variant="ghost"
                              size="sm"
                              onClick={() => removeContact(index)}
                            >
                              <Trash2 className="w-4 h-4 text-red-600" />
                            </Button>
                          </div>
                        </div>
                        <a
                          href={`tel:${contact.phone}`}
                          className="text-xl font-bold text-red-600 hover:text-red-700 flex items-center gap-2"
                        >
                          <Phone className="w-5 h-5" />
                          {contact.phone}
                        </a>
                      </div>
                    )}
                  </CardContent>
                </Card>
              ))}
            </div>
          )}
        </div>

        {/* Important Notice */}
        <Card className="mt-8 border-none shadow-lg bg-blue-50 border-2 border-blue-200">
          <CardContent className="p-6">
            <div className="flex items-start gap-3">
              <AlertTriangle className="w-6 h-6 text-blue-600 flex-shrink-0 mt-0.5" />
              <div>
                <h3 className="font-bold text-blue-900 mb-2">Important Information</h3>
                <ul className="space-y-2 text-sm text-blue-800">
                  <li>• Personal emergency contacts will be notified when you activate the SOS button</li>
                  <li>• Make sure all phone numbers are up to date and correct</li>
                  <li>• Your emergency contacts will receive your location when an alert is triggered</li>
                  <li>• Always call official emergency services (10111) for life-threatening situations</li>
                </ul>
              </div>
            </div>
          </CardContent>
        </Card>
      </div>
    </div>
  );
}
