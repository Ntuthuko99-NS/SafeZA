import React from "react";
import { Input } from "@/components/ui/input";
import { Textarea } from "@/components/ui/textarea";
import { Label } from "@/components/ui/label";
import { Users, Car } from "lucide-react";

export default function ReportStepTwo({ formData, updateFormData }) {
  return (
    <div className="space-y-6">
      <div>
        <h2 className="text-2xl font-bold text-gray-900 mb-2">Suspect & Witness Information</h2>
        <p className="text-gray-500">Any additional details you can provide</p>
      </div>

      <div className="space-y-2">
        <Label htmlFor="suspect_description">Suspect Description (Optional)</Label>
        <Textarea
          id="suspect_description"
          placeholder="Physical appearance, clothing, distinguishing features..."
          value={formData.suspect_description}
          onChange={(e) => updateFormData({ suspect_description: e.target.value })}
          rows={4}
          className="resize-none"
        />
      </div>

      <div className="space-y-2">
        <Label htmlFor="vehicle_details">Vehicle Details (Optional)</Label>
        <div className="relative">
          <Car className="absolute left-3 top-3 w-5 h-5 text-gray-400" />
          <Textarea
            id="vehicle_details"
            placeholder="Make, model, color, license plate..."
            value={formData.vehicle_details}
            onChange={(e) => updateFormData({ vehicle_details: e.target.value })}
            rows={3}
            className="resize-none pl-10"
          />
        </div>
      </div>

      <div className="space-y-2">
        <Label htmlFor="witness_count">Number of Witnesses</Label>
        <div className="relative">
          <Users className="absolute left-3 top-3 w-5 h-5 text-gray-400" />
          <Input
            id="witness_count"
            type="number"
            min="0"
            placeholder="0"
            value={formData.witness_count}
            onChange={(e) => updateFormData({ witness_count: parseInt(e.target.value) || 0 })}
            className="pl-10"
          />
        </div>
        <p className="text-xs text-gray-500">
          Include yourself if you witnessed the incident
        </p>
      </div>

      <div className="p-4 bg-blue-50 border border-blue-200 rounded-xl">
        <p className="text-sm text-blue-900">
          <strong>Tip:</strong> Even small details can be valuable. Don't worry if you can't remember everything.
        </p>
      </div>
    </div>
  );
}
